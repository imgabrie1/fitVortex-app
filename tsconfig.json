{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["react", "react-native", "jest", "node"]
  },
  "include": ["src/**/*", "metro.config.*", "app.config.*", "index.js"],
  "exclude": ["node_modules"]
}
